{
  "name": "otak-restart",
  "displayName": "otak-restart",
  "description": "This extension adds a button to VSCode that lets you restart the Extension Host with a single click. It streamlines the process, saving you from having to use the command palette or restart commands during development or troubleshooting, thus improving efficiency and easing debugging.",
  "publisher": "odangoo",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/tsuyoshi-otake-system-exe-jp/otak-restart"
  },
  "bugs": {
    "url": "https://github.com/tsuyoshi-otake-system-exe-jp/otak-restart/issues"
  },
  "homepage": "https://github.com/tsuyoshi-otake-system-exe-jp/otak-restart#readme",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.9.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "otak-restart.restartExtensionHost",
        "title": "拡張機能ホストを再起動",
        "category": "Extension Host"
      }
    ],
    "configuration": {
      "title": "Extension Host Restart",
      "properties": {
        "otak-restart.buttonPosition": {
          "type": "string",
          "default": "right",
          "enum": ["left", "right"],
          "description": "ステータスバーでのボタンの位置"
        },
        "otak-restart.buttonText": {
          "type": "string",
          "default": "$(sync) 再起動",
          "description": "ボタンに表示するテキスト（VSCodeのアイコンを含む）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
